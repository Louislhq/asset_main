{{#block "sprites"}}

[class^="icon-"],
[class*="icon-"]{
    display: inline-block;
    .iconSprite();
}
.iconSprite{
    background-image: url({{{spritesheet.escaped_image}}});
}

{{#each sprites}}
.icon-{{name}}{
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
.icon-{{name}}(@isHover: false){
    .hover (@a) when (@a = false) {
        .iconSprite();
        width: {{px.width}};
        height: {{px.height}};
    }
    .hover(@isHover);   
    background-position: {{px.offset_x}} {{px.offset_y}};
}
{{/each}}
{{/block}}